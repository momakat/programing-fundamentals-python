def calculate_price(product,quantity):
    if product == 'coffee':
        price = 1.50
    elif product == 'water':
        price = 1.00
    elif product == 'coke':
        price = 1.40
    elif product == 'snacks':
        price = 2.00

    return price * quantity

product = input()
quantity = float(input())

print(f'{calculate_price(product,quantity):.2f}')
